<div class="container">
    <h1><i class="fas fa-tools"></i> Ferramentas de Pentest</h1>

    <div class="tools-grid">
        <div class="tool-card">
            <h2><i class="fas fa-search"></i> Nmap</h2>
            <form class="tool-form" data-tool="nmap">
                <input type="text" placeholder="IP ou range (ex: 192.168.1.1)" required>
                <button type="submit">Executar Scan</button>
            </form>
        </div>

        <div class="tool-card">
            <h2><i class="fas fa-spider"></i> Dirb</h2>
            <form class="tool-form" data-tool="dirb">
                <input type="url" placeholder="URL alvo" required>
                <button type="submit">Iniciar Varredura</button>
            </form>
        </div>

        <div class="tool-card">
            <h2><i class="fas fa-database"></i> SQLMap</h2>
            <form class="tool-form" data-tool="sqlmap">
                <input type="url" placeholder="URL vulnerável" required>
                <button type="submit">Testar SQL Injection</button>
            </form>
        </div>

        <div class="tool-card">
            <h2><i class="fas fa-key"></i> Hydra</h2>
            <form class="tool-form" data-tool="hydra">
                <input type="text" placeholder="Usuário" required>
                <input type="text" placeholder="Arquivo de senhas" required>
                <input type="text" placeholder="Alvo" required>
                <select required>
                    <option value="ssh">SSH</option>
                    <option value="ftp">FTP</option>
                </select>
                <button type="submit">Iniciar Ataque</button>
            </form>
        </div>

        <div class="tool-card">
            <h2><i class="fas fa-folder-open"></i> Gobuster</h2>
            <form class="tool-form" data-tool="gobuster">
                <input type="url" placeholder="URL alvo" required>
                <input type="text" placeholder="Wordlist" required>
                <button type="submit">Iniciar Enumeração</button>
            </form>
        </div>
    </div>

    <div id="resultado" class="resultado-container"></div>
</div>

<script src="https://unpkg.com/xterm@4.19.0/lib/xterm.js"></script>
<script src="/js/terminal.js"></script>
