<div class="container">
    <h1><i class="fas fa-network-wired"></i> Nmap Online Scanner</h1>
    
    <div class="nmap-form">
        <div class="form-group">
            <label>Alvo:</label>
            <input type="text" id="target" placeholder="Digite o IP ou domínio (ex: exemplo.com)">
        </div>
        
        <div class="form-group">
            <label>Tipo de Scan:</label>
            <select id="scanType">
                <option value="-sV">Detecção de Versão</option>
                <option value="-sS">SYN Scan</option>
                <option value="-A">Scan Agressivo</option>
                <option value="-T4 -p-">Full Port Scan</option>
            </select>
        </div>
        
        <button onclick="executarNmapOnline()" class="btn-scan">
            <i class="fas fa-search"></i> Iniciar Scan
        </button>
    </div>

    <div id="resultado" class="resultado-scan">
        <div class="scan-status"></div>
        <pre class="output"></pre>
    </div>
</div>

<script src="/js/nmap-online.js"></script>
