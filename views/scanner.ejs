<div class="container">
    <h1><i class="fas fa-search"></i> Scanner de Vulnerabilidades</h1>
    
    <div class="scanner-tools">
        <div class="tool-section">
            <h2>Nmap Scanner</h2>
            <div class="tool-form">
                <input type="text" id="nmapTarget" placeholder="IP ou domínio (ex: 192.168.1.1)">
                <select id="nmapType">
                    <option value="-sV">Detecção de Versão</option>
                    <option value="-sS">SYN Scan</option>
                    <option value="-A">Scan Agressivo</option>
                </select>
                <button onclick="executarNmap()">Executar</button>
            </div>
        </div>

        <div id="scannerResult" class="scanner-result">
            <pre class="result-output"></pre>
        </div>
    </div>
</div>

<script src="/js/scanner.js"></script>
